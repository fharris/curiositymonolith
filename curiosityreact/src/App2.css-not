.display-column {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .challenge {
    font-size: 4em;
  }
  
  .badge {
    font-size: x-small;
    border: 2px solid dodgerblue;
    border-radius: 4px;
    padding: 0.2em;
    margin: 0.1em;
  }
  

div {
    border: 5px solid black;
    padding: 25px 50px 75px 100px;
    background-color: lightblue;
  }

  th {
    padding-right: 0.5em;
    border-bottom: solid 5px;
    border: 1px solid rgb(90, 7, 7);
  }